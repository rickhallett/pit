# The Pit API â€” Environment Variables
# Copy to .env and fill in your values

# ============================================
# DATABASE
# ============================================

# Local development (PostgreSQL via Docker)
DATABASE_URL=postgresql://pit:pit@localhost:5432/pit

# Production (Turso)
# DATABASE_URL=libsql://your-db.turso.io?authToken=your-token

# ============================================
# ANTHROPIC API
# ============================================

# Required: Your Anthropic API key
# Get one at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-...

# ============================================
# SERVER
# ============================================

# Bind address (0.0.0.0 for containers)
HOST=0.0.0.0

# Port (default: 5000)
PORT=5000

# Debug mode (NEVER true in production)
DEBUG=true

# ============================================
# OPTIONAL: RATE LIMITING
# ============================================

# Bouts per IP per hour (default: 3)
# RATE_LIMIT_BOUTS_PER_HOUR=3

# Rate limit window in seconds (default: 3600)
# RATE_LIMIT_WINDOW_SECONDS=3600
