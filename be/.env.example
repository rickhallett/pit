# The Pit API — Environment Variables

# Database
DATABASE_URL=postgresql://pit:pit@localhost:5432/pit

# Anthropic API
ANTHROPIC_API_KEY=your-api-key-here

# Email (Resend) — leave empty for dev mode (logs to console)
RESEND_API_KEY=
FROM_EMAIL=The Pit <noreply@thepit.cloud>

# Frontend URL for magic link verification
FRONTEND_URL=http://localhost:3000

# JWT Secret — MUST change in production (generate with: openssl rand -hex 32)
JWT_SECRET=CHANGE_ME_IN_PRODUCTION

# Server
HOST=0.0.0.0
PORT=5000
DEBUG=true
