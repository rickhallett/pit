# The Pit â€” Production Environment Variables
# Copy to .env and fill in your values
# Used by: docker-compose.prod.yml

# ============================================
# REQUIRED
# ============================================

# Anthropic API Key (required)
ANTHROPIC_API_KEY=sk-ant-api03-...

# Database URL (required)
# For Turso: libsql://your-db.turso.io?authToken=your-token
# For local PostgreSQL: postgresql://pit:pit@postgres:5432/pit
DATABASE_URL=libsql://pit.turso.io?authToken=your-token

# ============================================
# FRONTEND
# ============================================

# API URL for frontend (internal Docker network)
NEXT_PUBLIC_API_URL=http://api:5000

# ============================================
# OPTIONAL: LOCAL POSTGRESQL
# ============================================
# Only needed if using --profile postgres

POSTGRES_USER=pit
POSTGRES_PASSWORD=pit
POSTGRES_DB=pit
